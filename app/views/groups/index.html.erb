<center>
<h1> Groups </h1>
</center>

<% @groups.each do |group| %>
	 <div class="card"> <%= group.name %> <span class="right">
	  <%= link_to 'Edit Group', group, class: 'btn btn-default btn-info' %> 
	  <%= link_to 'Delete', group,
	   confirm: 'Are you sure?', :method => :delete, class: 'btn btn-default btn-danger' %> </span> </div> 
<% end %>

<center>
<% if(@groups.length == 0) %>
	<div class="card"> You Haven't Created Any Groups </div>
	<% end %>
</center>

<br>

<center>
<button class="btn btn-lg btn-primary" data-toggle="modal" data-target=".bs-modal-lg">New Group</button>

<!--<%= link_to 'New Group', new_group_path, class: 'btn btn-lg btn-primary' %>-->

<div class="modal fade bs-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
   		<div class="modal-header">
      <center><h1>Add a New Group</h1></center>
  </div>
<%= form_for(@group = Group.new) do |f| %>

       <div class="modal-body">

		
		<% if @group.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>
	      <ul>
	      <% @group.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	  	<% end %>
	  

	  </div>

	  
	  Group Name <%= f.text_field :name %>
	  <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
	
		
	<% end %>
    </div>
  </div>
</div>
</center>