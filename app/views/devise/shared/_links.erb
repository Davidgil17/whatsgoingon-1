<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name), :class => "btn btn-default center-block" %><br />
<% end -%>
</br>
<!--<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), :class => "btn btn-default center-block" %><br />
<% end -%>-->


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "btn btn-default center-block" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => "btn btn-default center-block" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
    <%= link_to omniauth_authorize_path(resource_name, resource_class.omniauth_providers[0]), :class => "btn btn-block btn-social btn-facebook" do %>
    <i class="fa fa-facebook"></i>Sign in with <%= resource_class.omniauth_providers[0].to_s.titleize %><br />
    <% end %>
    <%= link_to omniauth_authorize_path(resource_name, resource_class.omniauth_providers[1]), :class => "btn btn-block btn-social btn-twitter" do %>
    <i class="fa fa-twitter"></i>Sign in with <%= resource_class.omniauth_providers[1].to_s.titleize %><br />
    <% end %>
    <%= link_to omniauth_authorize_path(resource_name, resource_class.omniauth_providers[2]), :class => "btn btn-block btn-social btn-google-plus" do %>
    <i class="fa fa-google-plus"></i>Sign in with <%= resource_class.omniauth_providers[2].to_s.titleize %><br />
    <% end %>
<% end -%>
